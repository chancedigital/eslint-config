{
	"include": ["./"],
	"compilerOptions": {
		"module": "esnext",
		"lib": ["dom", "esnext"],
		"importHelpers": true,
		"declaration": true,
		"sourceMap": true,
		"rootDir": "./",
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"moduleResolution": "node",
		"baseUrl": "./",
		"target": "esnext",
		"paths": {
			"@": ["./"],
			"*": ["/*"]
		},
		"jsx": "react",
		"esModuleInterop": true
	}
}
